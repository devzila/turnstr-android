<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout25"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <circular_imagview.CircularImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView32"
            android:src="@drawable/profile_placeholder"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView31"
            android:layout_alignTop="@+id/imageView32"
            android:layout_toRightOf="@+id/imageView32"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/textView33"
            android:layout_toStartOf="@+id/textView33"
            android:layout_marginRight="3dp"
            android:textColor="#666666"
            android:textSize="13dp"
            android:layout_marginTop="10dp" />

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtEmojicon"
            android:text="I \ue32d emojicon"

            android:layout_below="@+id/textView31"
            android:layout_toRightOf="@+id/imageView32"
            android:layout_marginLeft="10dp"
            android:layout_alignRight="@+id/textView31"
            android:layout_alignEnd="@+id/textView31"
            android:layout_marginRight="3dp"
            android:textColor="#4A4A4A"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3h"
            android:id="@+id/textView33"
            android:layout_alignBottom="@+id/textView31"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:textSize="13dp" />



    </RelativeLayout>


</RelativeLayout>
